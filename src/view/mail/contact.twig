{% extends "/layout/mail.twig" %}

{% block body %}
    <p>
        A copy of the contact form:
    </p>
    <table>
        <tr>
            <th>Name</th>
            <td>{{ name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ email }}</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td>{{ subject }}</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>{{ message|nl2br }}</td>
        </tr>
    </table>
{% endblock %}
